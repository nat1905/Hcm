@model Hcm.Web.Models.LoginViewModel

<div class="d-flex align-items-center justify-content-center" style="margin-top:25%">
    <div class="card col-md-4 shadow-lg" style="padding-top:25px">
        <form asp-controller="Home" asp-action="Login" class="card-body">
            <div class="card-title text-center">
                <h2>myHCM</h2>
            </div>
            <div class="card-text">
                <div class="form-group">
                    <input asp-for="Username" type="text"
                           placeholder="@Html.DisplayNameFor(e => e.Username)" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input asp-for="Password" type="password"
                           placeholder="@Html.DisplayNameFor(e => e.Password)" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <select asp-for="Role" class="form-control">
                        <option value="0">Please select</option>
                        <option value="1">Administrator</option>
                        <option value="2">Employee</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary float-right" style="width:100%">Login</button>
            </div>
        </form>
    </div>
</div>